    <section class="enable-bidding-section py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">

                    <div class="card shadow-lg border-0 rounded-lg">
                        <div class="card-body p-5">
                            <h3 class="text-center mb-4 text-primary">📅 Set Bidding Time</h3>

                            @using (Html.BeginForm("EnableBidding", "BeachDY", FormMethod.Post))
                            {
                                @Html.Hidden("adId", adId)

                                <div class="form-group">
                                    <label for="startTime">Start Time</label>
                                    <input type="datetime-local" id="startTime" name="startTime" class="form-control" required />
                                </div>

                                <div class="form-group">
                                    <label for="endTime">End Time</label>
                                    <input type="datetime-local" id="endTime" name="endTime" class="form-control" required />
                                </div>

                                <div class="form-group">
                                    <label for="startingAmount">Starting Amount</label>
                                    <input type="number" id="startingAmount" name="startingAmount" step="0.01" class="form-control" required />
                                </div>


                                if (!string.IsNullOrEmpty(ViewBag.Error as string))
                                {
                                    <div class="alert alert-danger mt-3">
                                        @ViewBag.Error
                                    </div>
                                }

                                <button type="submit" class="btn btn-primary btn-block mt-4">
                                    ✅ Enable Bidding
                                </button>
                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>







    <!-- FOOTER -->
    <footer class="footer_area">
        <div class="footer_copyright pt-15 pb-30">
            <div class="container">
                <div class="footer_copyright_wrapper text-center d-sm-flex justify-content-between align-items-center">
                    <div class="copyright mt-15">
                        <p>Designed and Developed by <a href="" rel="nofollow"> BeachDY </a></p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- BACK TO TOP -->
    <a href="#" class="back-to-top"><i class="fa fa-angle-up"></i></a>

    <style>
        .enable-bidding-section .card {
            background: #fefefe;
            transition: 0.3s ease-in-out;
        }

        .enable-bidding-section .card:hover {
                box-shadow: 0 0 20px rgba(0,0,0,0.1);
            }

    </style>
