@{
    ViewBag.Title = "Enable Bidding";
    int adId = ViewBag.AdId != null ? Convert.ToInt32(ViewBag.AdId) : 0;
}

<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <title>Enable Bidding</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!--====== Favicon Icon ======-->
    <link rel="shortcut icon" href="@Url.Content("~/content/images/favicon.png")" type="image/png" />

    <!--====== CSS Files ======-->
    <link rel="stylesheet" href="@Url.Content("~/content/css/magnific-popup.css")" />
