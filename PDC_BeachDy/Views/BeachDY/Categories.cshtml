
@{
    //Layout = null; // "~/Views/Shared/_Layout.cshtml"; // Or your layout path
    ViewBag.Title = "Categories";
}



<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <title>Categories</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!--====== Favicon Icon ======-->
    <link rel="shortcut icon" href="@Url.Content("~/content/images/favicon.png")" type="image/png" />

    <!--====== CSS Files ======-->
    <link rel="stylesheet" href="@Url.Content("~/content/css/magnific-popup.css")" />
    <link rel="stylesheet" href="@Url.Content("~/content/css/nice-select.css")" />
    <link rel="stylesheet" href="@Url.Content("~/content/css/slick.css")" />
    <link rel="stylesheet" href="@Url.Content("~/content/css/ion.rangeSlider.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/content/css/fontawesome.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/content/css/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/content/css/default.css")" />
    <link rel="stylesheet" href="@Url.Content("~/content/css/style.css")" />
</head>

<body class="gray-bg">

    <!-- PRELOADER -->
    <div class="preloader">
        <div class="loader">
            <div class="ytp-spinner">
                <div class="ytp-spinner-container">
                    <div class="ytp-spinner-rotator">
                        <div class="ytp-spinner-left">
                            <div class="ytp-spinner-circle"></div>
                        </div>
                        <div class="ytp-spinner-right">
                            <div class="ytp-spinner-circle"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- HEADER -->
    <header class="header_area">
        <div class="header_navbar">
            <div class="container">
                <nav class="navbar navbar-expand-lg">
                    <a class="navbar-brand" href="@Url.Action("Home", "BeachDY")">
                        <img src="@Url.Content("~/content/images/logo.png")" alt="logo" width="320px" />
                    </a>

                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
                        <span class="toggler-icon"></span>
                        <span class="toggler-icon"></span>
                        <span class="toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse sub-menu-bar" id="navbarSupportedContent">
                        <ul class="navbar-nav m-auto">
                            <li><a  href="@Url.Action("Home", "BeachDY")">Home <span class="line"></span></a></li>
                            <li><a class="active" href="@Url.Action("Categories", "BeachDY")">Categories <span class="line"></span></a></li>

                            @if (Session["UserId"] == null)
                            {
                                <li><a href="@Url.Action("SignIn", "BeachDY")">Sign In <span class="line"></span></a></li>
                                <li><a href="@Url.Action("SignUp", "BeachDY")">Sign Up <span class="line"></span></a></li>
                            }
                            else
                            {
                                <li>
                                    <a href="#">My Account <i class="fa fa-angle-down"></i> <span class="line"></span></a>
                                    <ul class="sub-menu">
                                        @*<li><a href="@Url.Action("DashBoard", "BeachDY")">Dashboard</a></li>*@
                                        <li><a href="@Url.Action("My_Ads", "BeachDY")"> Dashboard </a></li>
                                        <li><a href="@Url.Action("My_Favourite", "BeachDY")">My Favourites</a></li>

                                    </ul>
                                </li>
                            }
                        </ul>
                    </div>

                    @if (Session["UserId"] != null)
                    {
                        <div class="navbar_btn" style="margin-left: -230px;">
                            <ul>

                                <li><a class="sign-up" href="@Url.Action("Post_Ad", "BeachDY")">Post Ads</a></li>
                                <li><a class="navbar-nav" href="@Url.Action("Sign_out", "BeachDY")"> Sign Out </a></li>
                            </ul>
                        </div>
                    }
                </nav>
            </div>
        </div>
        <div class="page_banner bg_cover" style="background-image: url('@Url.Content("~/content/images/page-banner.jpg")')">
            <div class="container">
                <div class="page_banner_content">
                    <h3 class="title">Categories</h3>
                    <ul class="breadcrumb">
                        <li><a href="@Url.Action("Home", "BeachDY")">Home</a></li>
                        <li>Categories</li>
                    </ul>
                </div>
            </div>
        </div>

    </header>


    <section class="categories_page pt-70 pb-120">
        <div class="container">
            <form action="/BeachDY/Search" method="get" class="search-form d-flex">
                <input type="text" name="query" placeholder="Search products..." class="form-control" />
                <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
            </form>

        </div>
        <div class="container">
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="grid" role="tabpanel" aria-labelledby="grid-tab">
                    <div class="row">
                        <!-- Repeat this block for each category -->
                        @{
                            var categories = new[]
                            {
                            new { Icon = "fal fa-desktop", Title = "Computer & Office" },
                            new { Icon = "fal fa-gem", Title = "Jewelry & Accessories" },
                            new { Icon = "fal fa-home", Title = "Home & Garden" },
                            new { Icon = "fal fa-briefcase", Title = "Luggage & Bags" },
                            new { Icon = "fal fa-child", Title = "Mother & Kids" },
                            new { Icon = "fal fa-tshirt", Title = "Dress & Clothing" },
                            new { Icon = "fal fa-mobile-alt", Title = "Phone & Accesories" },
                            new { Icon = "fal fa-camera-retro", Title = "Camera & Accesories" },
                            new { Icon = "fal fa-tv", Title = "Electronics" },
                            new { Icon = "fal fa-motorcycle", Title = "Vachile" },
                            new { Icon = "fal fa-bullseye-arrow", Title = "Sports & Gaming" },
                            new { Icon = "fal fa-watch", Title = "Watch & Accesories" }
                        };
                        }

                        @foreach (var category in categories)
                        {
                            <div class="col-lg-3 col-6">
                                <div class="single_categories text-center mt-30">
                                    <div class="categories_icon">
                                        <i class="@category.Icon"></i>
                                    </div>
                                    <div class="categories_content">
                                        <h5 class="title">@category.Title</h5>
                                    </div>
                                    <a href="@Url.Action("CategoryProducts", "BeachDY", new { category = category.Title })"></a>

                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="tab-pane fade" id="list" role="tabpanel" aria-labelledby="list-tab">
                    <div class="categories_list">
                        <!-- Example category list block, repeat or make dynamic -->
                        <div class="single_list mt-30">
                            <div class="list_title_icon d-flex align-items-center">
                                <div class="icon">
                                    <img src="~/assets/images/categories_icon/categories-1.svg" alt="Icon" />
                                </div>
                                <div class="list_title media-body">
                                    <h5 class="title">Computer & Office</h5>
                                </div>
                            </div>
                            <div class="categories_list_wrapper">
                                <div class="row">
                                    <div class="col-lg-3 col-sm-6">
                                        <ul class="list">
                                            <li><a href="product.html">Office Electronics</a></li>
                                            <li><a href="product.html">Computer Components</a></li>
                                            <li><a href="product.html">Computer Peripherals</a></li>
                                            <li><a href="product.html">Internal Storage</a></li>
                                        </ul>
                                    </div>
                                    <!-- Repeat other columns as needed -->
                                </div>
                            </div>
                        </div>

                        <!-- Add more category list blocks as necessary -->
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- FOOTER -->
    <footer class="footer_area">
        <div class="footer_copyright pt-15 pb-30">
            <div class="container">
                <div class="footer_copyright_wrapper text-center d-sm-flex justify-content-between align-items-center">
                    <div class="copyright mt-15">
                        <p>Designed and Developed by <a href="" rel="nofollow">BeachDY</a></p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- BACK TO TOP -->
    <a href="#" class="back-to-top"><i class="fa fa-angle-up"></i></a>

    <!-- Scripts -->
    <script src="@Url.Content("~/content/js/vendor/jquery-1.12.4.min.js")"></script>
    <script src="@Url.Content("~/content/js/vendor/modernizr-3.7.1.min.js")"></script>
    <script src="@Url.Content("~/content/js/popper.min.js")"></script>
    <script src="@Url.Content("~/content/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/content/js/slick.min.js")"></script>
    <script src="@Url.Content("~/content/js/jquery.magnific-popup.min.js")"></script>
    <script src="@Url.Content("~/content/js/jquery.nice-select.min.js")"></script>
    <script src="@Url.Content("~/content/js/waypoints.min.js")"></script>
    <script src="@Url.Content("~/content/js/jquery.counterup.min.js")"></script>
    <script src="@Url.Content("~/content/js/ion.rangeSlider.min.js")"></script>
    <script src="@Url.Content("~/content/js/ajax-contact.js")"></script>
    <script src="@Url.Content("~/content/js/main.js")"></script>
</body>
</html>
